<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <ImageView
        android:id="@+id/logoImageLogin"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:transitionName="logo_image"
        android:background="@drawable/logo"/>
    <TextView
        android:id="@+id/welcome_sloganLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to KheRi"
        android:transitionName="logo_text"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/signInSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:transitionName="slogan_text"
        android:text="Welcome to KheRi"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernameLogin"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="username_tran">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:inputType="text"/>



        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordLogin"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:passwordToggleEnabled="true"
            android:transitionName="password_tran">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword" />


        </com.google.android.material.textfield.TextInputLayout>
<Button
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:text="Forget Password?"
    android:layout_gravity="right"
    android:elevation="0dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:textColor="@color/black"
    />
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="GO"
            android:transitionName="Go_tran"
            android:layout_gravity="right"
            android:elevation="0dp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/goToSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="New User? Sign Up"
            android:layout_gravity="right"
            android:elevation="0dp"
            android:textColor="@color/black"
            android:transitionName="login_tran_btn"
            android:fontFamily="@string/fab_transformation_scrim_behavior"
            />



</LinearLayout>






</LinearLayout>